<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.Users">

	<!-- ログイン画面で使用 -->
	<select id="findByUserId" resultType="com.example.demo.entity.Users">
        SELECT * FROM users
        WHERE id = #{id}
    </select>
    
    <!-- 勤怠管理画面で使用 -->
    <select id="findByIdAndNameAndRole" resultType="com.example.demo.entity.Users">
    	SELECT * FROM users
        WHERE id = #{id} AND name = #{name} AND role = #{role}  
    </select>
    
    <!-- ユーザ管理画面で使用 -->
    <select id="findByUserName" resultType="com.example.demo.entity.Users">
        SELECT * FROM users
        WHERE name = #{name}
    </select>
    
    <insert id="insertUser" parameterType="com.example.demo.entity.Users">
        INSERT INTO users (password, name, role, start_date)
        VALUES (#{password}, #{name}, #{role}, #{startDate})
    </insert>
    
    <update id="updateUser" parameterType="com.example.demo.entity.Users">
        UPDATE users SET password = #{password}, role = #{role}, start_date = #{startDate}
        WHERE name = #{name}
    </update>
    
    
</mapper>
