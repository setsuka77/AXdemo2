<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UsersMapper">

	<resultMap id="userResultMap"
		type="com.example.demo.dto.UserManagementDto">
		<result property="startDate" column="start_date"
			javaType="java.time.LocalDate" jdbcType="DATE"
			typeHandler="org.apache.ibatis.type.LocalDateTypeHandler" />
	</resultMap>

	<!-- ログイン画面で使用 -->
	<select id="findByUserId"
		resultType="com.example.demo.entity.Users">
		SELECT * FROM users
		WHERE id = #{id}
	</select>

	<!-- 勤怠管理画面で使用 -->
	<select id="findByIdAndNameAndRole"
		resultType="com.example.demo.entity.Users">
		SELECT * FROM users
		WHERE id = #{id} AND name = #{name} AND
		role = #{role}
	</select>

	<!-- ユーザ管理画面で使用 -->
	<select id="findByName"
		resultType="com.example.demo.dto.UserManagementDto">
		SELECT u.*, d.name AS departmentName
		FROM users u
		JOIN department d ON u.department_id = d.department_id
		WHERE u.name = #{name}
	</select>

	<!-- ユーザ管理画面で使用 -->
	<select id="findByIdAndName"
		resultType="com.example.demo.dto.UserManagementDto">
		SELECT * FROM users
		WHERE name = #{name}
		AND id = #{id}
	</select>

	<!-- ユーザ管理画面で使用 -->
	<select id="findById" resultType="com.example.demo.entity.Users">
		SELECT * FROM users
		WHERE id =
		#{id}
	</select>

	<!-- 部署登録画面で使用 -->
	<select id="findWorker"
		resultType="com.example.demo.dto.UserManagementDto">
		SELECT * FROM users
		WHERE department_id = #{departmentId}
	</select>

	<select id="findMaxId" resultType="java.lang.Integer">
		SELECT MAX(id) FROM users
	</select>

	<insert id="insertUser"
		parameterType="com.example.demo.entity.Users">
		INSERT INTO users (id, name, password, role,
		department_id, start_date, email, name_kana, work_place)
		VALUES (#{id},
		#{name}, #{password},
		#{role}, #{departmentId},
		#{startDate},#{email},#{nameKana},#{workPlace})
	</insert>

	<update id="updateUser"
		parameterType="com.example.demo.entity.Users">
		UPDATE users SET password = #{password}, role = #{role},
		department_id = #{departmentId},
		start_date = #{startDate},
		email =
		#{email},
		name_kana = #{nameKana},
		work_place = #{workPlace}
		WHERE id =
		#{id}
	</update>


	<!-- バッチ処理で使用 -->
	<select id="findUsersByRole"
		resultType="com.example.demo.entity.Users">
		SELECT * FROM users
		WHERE role = #{role}
	</select>

	<select id="findManagers"
		resultType="com.example.demo.dto.UsersDto">
		SELECT * FROM users WHERE role = 2
	</select>

</mapper>
